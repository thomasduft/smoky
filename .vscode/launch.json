{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "WebApi",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build:WebApi",
      "program": "${workspaceRoot}/samples/WebApi/bin/Debug/net7.0/WebApi.dll",
      "args": [
        "--urls",
        "https://localhost:5001"
      ],
      "cwd": "${workspaceRoot}/samples/WebApi",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceRoot}/Views"
      },
      "console": "integratedTerminal",
    },
    {
      "name": "smoky:ping",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-smoky",
      "program": "${workspaceFolder}/src/smoky/bin/Debug/net7.0/tomware.Smoky.dll",
      "args": [
        "ping",
        "https://demo.playone.buhlergroup.com/"
      ],
      "cwd": "${workspaceFolder}/src/smoky",
      "stopAtEntry": false
    }
  ]
}