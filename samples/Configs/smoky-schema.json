{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/Configuration",
  "definitions": {
    "Configuration": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Domain": {
          "type": "string",
          "format": "uri",
          "qt-uri-protocols": [
            "https"
          ]
        },
        "RecordVideoDir": {
          "type": "string"
        },
        "Headless": {
          "type": "boolean"
        },
        "Slow": {
          "type": "integer"
        },
        "Timeout": {
          "type": "integer"
        },
        "Channel": {
          "type": "string"
        },
        "Tests": {
          "$ref": "#/definitions/Tests"
        }
      },
      "required": [
        "Domain",
        "Tests"
      ],
      "title": "Configuration"
    },
    "Tests": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "HealthTests": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/HealthTest"
          }
        },
        "E2ETests": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/E2ETest"
          }
        }
      },
      "required": [],
      "title": "Tests"
    },
    "E2ETest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Name": {
          "type": "string"
        },
        "Route": {
          "type": "string"
        },
        "Arrange": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/E2ETestStep"
          }
        },
        "Act": {
          "$ref": "#/definitions/E2ETestStep"
        },
        "Assert": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/E2ETestStep"
          }
        }
      },
      "required": [
        "Name"
      ],
      "title": "E2ETest"
    },
    "E2ETestStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Step": {
          "type": "string"
        },
        "LocatorType": {
          "$ref": "#/definitions/LocatorType"
        },
        "AriaRole": {
          "$ref": "#/definitions/AriaRole"
        },
        "Text": {
          "type": "string"
        },
        "Action": {
          "$ref": "#/definitions/Action"
        },
        "Value": {
          "type": "string"
        }
      },
      "required": [
        "Step"
      ],
      "title": "E2ETestStep"
    },
    "HealthTest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Name": {
          "type": "string"
        },
        "Expected": {
          "type": "string"
        },
        "PropertyPath": {
          "type": "string"
        },
        "Route": {
          "type": "string"
        }
      },
      "required": [
        "Expected",
        "Name",
        "PropertyPath",
        "Route"
      ],
      "title": "HealthTest"
    },
    "Action": {
      "type": "string",
      "enum": [
        "Click",
        "Fill",
        "IsVisible"
      ],
      "title": "Action"
    },
    "AriaRole": {
      "type": "string",
      "enum": [
        "Alert",
        "Alertdialog",
        "Application",
        "Article",
        "Banner",
        "Blockquote",
        "Button",
        "Caption",
        "Cell",
        "Checkbox",
        "Code",
        "Columnheader",
        "Combobox",
        "Complementary",
        "Contentinfo",
        "Definition",
        "Deletion",
        "Dialog",
        "Directory",
        "Document",
        "Emphasis",
        "Feed",
        "Figure",
        "Form",
        "Generic",
        "Grid",
        "Gridcell",
        "Group",
        "Heading",
        "Img",
        "Insertion",
        "Link",
        "List",
        "Listbox", 
        "Listitem",
        "Log",
        "Main",
        "Marquee", 
        "Math",
        "Meter",
        "Menu",
        "Menubar", 
        "Menuitem", 
        "Menuitemcheckbox", 
        "Menuitemradio",
        "Navigation",
        "None",
        "Note",
        "Option", 
        "Paragraph", 
        "Presentation",
        "Progressbar",
        "Radio",
        "Radiogroup", 
        "Region",
        "Row",
        "Rowgroup", 
        "Rowheader",
        "Scrollbar",
        "Search",
        "Searchbox", 
        "Separator",
        "Slider",
        "Spinbutton", 
        "Status",
        "Strong",
        "Subscript", 
        "Superscript", 
        "Switch",
        "Tab",
        "Table", 
        "Tablist", 
        "Tabpanel",
        "Term", 
        "Textbox", 
        "Time",
        "Timer",
        "Toolbar",
        "Tooltip",
        "Tree",
        "Treegrid", 
        "Treeitem"
      ],
      "title": "AriaRole"
    },
    "LocatorType": {
      "type": "string",
      "enum": [
        "BySelector",
        "GetByLabel",
        "GetByRole",
        "GetByTestId",
        "GetByText"
      ],
      "title": "LocatorType"
    }
  }
}